<p id="notice"><%= notice %></p>

<h1>Listing Product Points</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_points.each do |product_point| %>
      <tr>
        <td><%= product_point.product_id %></td>
        <td><%= product_point.user_id %></td>
        <td><%= link_to 'Show', product_point %></td>
        <td><%= link_to 'Edit', edit_product_point_path(product_point) %></td>
        <td><%= link_to 'Destroy', product_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

